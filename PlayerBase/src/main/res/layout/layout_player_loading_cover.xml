<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/cover_player_loading_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/play_light_alpha_black"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@id/cover_player_loading_view_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:focusable="false"
            android:layout_centerHorizontal="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateOnly="true"
            />

        <TextView
            android:id="@id/cover_player_loading_text_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cover_player_loading_view_loading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/play_loading_text_color"
            android:text="@string/player_loading_text"/>

    </RelativeLayout>

</RelativeLayout>